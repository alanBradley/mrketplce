<div class="jumbotron">
  <h1>Give yourself some Retail Therapy!</h1>
  <h2>Discover what it feels like to love yourself </h2>
</div>

<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
        <!-- image now set to be a link -->
          <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p>Price: <%= number_to_currency(listing.price) %></p>
            <p>Sold by: <%= listing.user.name %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-primary" %>
<% end %>

<br>
